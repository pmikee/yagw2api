<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="yagw2api" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>de.justi.yagw2api.analyzer.impl.WorldEntity</class>
		<class>de.justi.yagw2api.analyzer.impl.WVWMatchEntity</class>
		<class>de.justi.yagw2api.analyzer.impl.WVWMapEntity</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:yagw2api;create=true" />
			<property name="javax.persistence.jdbc.user" value="yagw2api" />
			<property name="javax.persistence.jdbc.password" value="yagw2api" />

			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
			<property name="eclipselink.target-database" value="Derby" />
			<property name="eclipselink.persistence-context.flush-mode"
				value="commit" />
		</properties>
	</persistence-unit>
</persistence> 