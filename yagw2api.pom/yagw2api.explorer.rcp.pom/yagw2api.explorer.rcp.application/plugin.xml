<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="yagw2api.explorer.rcp.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="yagw2api.explorer.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="yagw2api.explorer.rcp.WVWPerspective"
            fixed="false"
            id="yagw2api.explorer.rcp.wvw.perspective"
            name="WVW Perspective">
      </perspective>
   </extension>
   <extension
         id="yagw2api"
         point="org.eclipse.core.runtime.products">
      <product
            application="yagw2api.explorer.rcp.application"
            name="YAGW2API Explorer">
         <property
               name="appName"
               value="YAGW2API Explorer">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="yagw2api.explorer.rcp.wvw.MatchSelectorViewPart"
            id="yagw2api.explorer.rcp.wvw.matchselector"
            name="Match Selector"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="yagw2api.explorer.rcp.wvw.MatchDetailsViewPart"
            id="yagw2api.explorer.rcp.wvw.matchdetails"
            name="Match Details">
      </view>
      <view
            allowMultiple="false"
            class="yagw2api.explorer.rcp.wvw.MapDetailsViewPart"
            id="yagw2api.explorer.rcp.wvw.mapdetails"
            name="Map Details">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="yagw2api.explorer.rcp.wvw.perspective">
         <view
               closeable="false"
               id="yagw2api.explorer.rcp.wvw.matchselector"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="yagw2api.explorer.rcp.wvw.matchdetails"
               minimized="false"
               moveable="true"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="yagw2api.explorer.rcp.wvw.mapdetails"
               minimized="false"
               moveable="true"
               relationship="bottom"
               relative="yagw2api.explorer.rcp.wvw.matchdetails"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
