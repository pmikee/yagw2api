<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.justi</groupId>
	<artifactId>yagw2api.pom</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Parent POM for "Yet another GW2 API"</name>

	<url>http://yagw2api.appspot.com</url>
	<organization>
		<name>Julian Stitz</name>
	</organization>
	<developers>
		<developer>
			<id>Lul4n.8497</id>
			<email>julian.stitz@gmail.com</email>
			<name>Julian Stitz</name>
			<roles>
				<role>owner</role>
				<role>architect</role>
				<role>developer</role>
			</roles>
		</developer>
	</developers>


	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<de.justi.yagw2api.core.version>0.0.1-SNAPSHOT</de.justi.yagw2api.core.version>
		<de.justi.yagw2api.analyzer.version>0.0.1-SNAPSHOT</de.justi.yagw2api.analyzer.version>
		<de.justi.yagw2api.sample.version>0.0.1-SNAPSHOT</de.justi.yagw2api.sample.version>
		<de.justi.yagw2api.webapp.version>0.0.1-SNAPSHOT</de.justi.yagw2api.webapp.version>
	</properties>

	<modules>
		<module>yagw2api.core</module>
		<module>yagw2api.analyzer</module>
		<module>yagw2api.sample</module>
		<module>yagw2api.webapp</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<compilerVersion>1.7</compilerVersion>
					<showWarning>true</showWarning>
					<showDeprecation>true</showDeprecation>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.1.1</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.1</version>
				</plugin>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.4</version>
				</plugin>
				<plugin>
					<groupId>com.akathist.maven.plugins.launch4j</groupId>
					<artifactId>launch4j-maven-plugin</artifactId>
					<version>1.5.2</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>2.14.1</version>
					<configuration>
						<disableXmlReport>true</disableXmlReport>
						<failIfNoSpecifiedTests>false</failIfNoSpecifiedTests>
						<failIfNoTests>false</failIfNoTests>
					</configuration>
				</plugin>
				<plugin>
					<groupId>com.github.wvengen</groupId>
					<artifactId>proguard-maven-plugin</artifactId>
					<version>2.0.6</version>
					<configuration>
						<addMavenDescriptor>false</addMavenDescriptor>
						<obfuscate>true</obfuscate>
						<includeDependency>false</includeDependency>
						<libs>
							<lib>${java.home}\lib\rt.jar</lib>
							<lib>${java.home}\lib\jsse.jar</lib>
						</libs>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>net.sf.proguard</groupId>
							<artifactId>proguard-base</artifactId>
							<version>4.9</version>
							<scope>runtime</scope>
						</dependency>
					</dependencies>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>webstart-maven-plugin</artifactId>
					<version>1.0-beta-3</version>
					<configuration>
						<libPath>lib</libPath>
						<excludeTransitive>false</excludeTransitive>
						<unsignAlreadySignedJars>true</unsignAlreadySignedJars>
						<sign>
							<keystore>yagw2api</keystore>
							<keypass>gwodh!</keypass>
							<storepass>wvwitb!</storepass>
							<alias>yagw2api</alias>
							<dnameCn>None</dnameCn>
							<dnameOu>None</dnameOu>
							<dnameO>de.justi</dnameO>
							<dnameL>Stuttgart</dnameL>
							<dnameSt>BW</dnameSt>
							<dnameC>DE</dnameC>
							<verify>true</verify>
							<keystoreConfig>
								<delete>true</delete>
								<gen>true</gen>
							</keystoreConfig>
						</sign>
						<pack200>true</pack200>
						<gzip>true</gzip>
						<outputJarVersions>false</outputJarVersions>
						<verbose>false</verbose>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<artifactId>junit</artifactId>
			<groupId>junit</groupId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<artifactId>yagw2api.core</artifactId>
				<groupId>de.justi</groupId>
				<version>${de.justi.yagw2api.core.version}</version>
			</dependency>
			<dependency>
				<artifactId>yagw2api.analyzer</artifactId>
				<groupId>de.justi</groupId>
				<version>${de.justi.yagw2api.analyzer.version}</version>
			</dependency>
			<dependency>
				<artifactId>yagw2api.sample</artifactId>
				<groupId>de.justi</groupId>
				<version>${de.justi.yagw2api.sample.version}</version>
